# AI Services
OPENAI_API_KEY=your_openai_api_key_here

# Search Services
SERPAPI_KEY=your_serpapi_key_here

# Google OAuth2 (for Calendar, Gmail, Contacts)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Database (SQLite is used by default, stored locally)
DATABASE_URL=sqlite+aiosqlite:///~/.ai_assistant/assistant.db

# Security
SECRET_KEY=your_secret_key_for_jwt_tokens_here

# Development
DEBUG=true
LOG_LEVEL=info

# Voice Services (Optional - for enhanced TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Email Services (Optional - for SMTP sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here